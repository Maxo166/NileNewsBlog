@page "/Article/Create"
@inherits CreateArticleBase

<PageTitle>@CreateArticle</PageTitle>
<div>
    <h1 class="title-5">@CreateArticle</h1>
</div>
<form action="">   
    <div class="field">
        <label class="label">Title</label>
        <div class="control">
            <input type="text" class="input is-normal" placeholder="Title"/>
        </div>
    </div>
    <div class="field">
        <label class="label">Content</label>
        <div class="control">
            <textarea class="textarea is-normal" placeholder="Content"></textarea>
        </div>
    </div>
    <div class="field">
        <div class="control" style="text-align: right;">
            <input type="submit" class="button is-normal is-link is-light" value="Create">
        </div>
    </div>
</form>
