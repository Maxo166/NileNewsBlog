@page "/Account/Login"
@layout AccountLayout

<PageTitle> Login </PageTitle>
<form class="notification is-fullwidth-mobile is-flex is-flex-direction-column is-flex-grow-1 is-flex-shrink-1">
    <p class="title is-3 has-text-centered"><strong>Login</strong></p>
    <!-- Email Field -->
    <div class="field mb-4">
        <p class="control has-icons-left has-icons-right">
            <input class="input" type="email" placeholder="Email">
            <span class="icon is-small is-left"><i class="fa fa-envelope"></i></span>
            <span class="icon is-small is-right"><i class="fa fa-check"></i></span>
        </p>
    </div>
    <!-- Password Field -->
    <div class="field mb-4">
        <p class="control has-icons-left">
            <input class="input" type="password" placeholder="Password">
            <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
            </span>
        </p>
    </div>
    <!-- Checkbox Field["Remember me"] -->
    <div class="field mb-4">
        <div class="control rmbr-me is-flex is-justify-content-space-between">
            <label class="checkbox">
                <input type="checkbox" /> Remember me 
            </label>
            <a href="#" class="is-link">Forgot Password?</a>
        </div>
    </div>
    <!-- Login Field[btn] -->
    <div class="control mb-4">
        <button class="button is-success">Log in</button>
    </div>
    <p>I don't have an account <a class="has-text-link" href="/Account/Register"><strong>Register</strong></a></p>
</form>

